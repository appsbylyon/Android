<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/user_agreement_fragment"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/dialog_back9"
    android:orientation="vertical" >
	
    <com.appsbylyon.askalvis.custom.ScrollViewCustom 
        android:id="@+id/agreement_scroll"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="200sp">

	    <TextView
	        android:id="@+id/agreement_text"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:text="Agreement Text Will Go Here"
	        android:textColor="@color/help_dialog_text_color" />
    
    </com.appsbylyon.askalvis.custom.ScrollViewCustom>
	<LinearLayout 
	    android:id="@+id/buttons"
	    android:layout_below="@id/agreement_scroll"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="5dp"
	    android:orientation="horizontal">
		"

	    <Button
	        android:id="@+id/decline_button"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:background="@drawable/button_dark"
	        android:text="@string/button_user_agreement_decline" />
	
	    <Button
	        android:id="@+id/accept_button"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:background="@drawable/button_dark"
	        android:text="@string/button_user_agreement_accept" />

    </LinearLayout>
   
</RelativeLayout>