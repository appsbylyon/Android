<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_background2"
    tools:context="com.appsbylyon.askalvis.AskAlvis"
    tools:ignore="MergeRootFrame" >
    
    <TextView
        android:id="@+id/main_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/scroll3_9"
        android:gravity="center_horizontal"
        android:text="@string/title_tap_lamp"
        android:textColor="@color/title_font_color"
        android:textSize="@dimen/header_text_size" />
    
    <TextView
        android:id="@+id/speech_bubble1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:background="@drawable/speech_92"
        android:gravity="center"
        android:text="Test Text Test Text Test Text Test T "
        android:textColor="@color/bubble_text_color"
        android:textSize="@dimen/bubble_text_size" />
    
    <TextView
        android:id="@+id/speech_bubble2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:background="@drawable/speech_92"
        android:gravity="center"
        android:text="Test Text"
        android:textColor="@color/bubble_text_color" 
        android:textSize="@dimen/bubble_text_size" />

"
    
	<LinearLayout
        android:id="@+id/lamp_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" 
        android:layout_marginBottom="5dp"
        android:orientation="vertical">   
	    <ImageView
	        android:id="@+id/lamp_image"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:adjustViewBounds="true"
	        android:src="@drawable/lamp_only" />

    
	</LinearLayout>
    
    <ImageView
        android:id="@+id/alvis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/lamp_layout"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:src="@drawable/alvis" />
    <ImageView
        android:id="@+id/cloud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/lamp_layout"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:src="@drawable/cloud" />
	
</RelativeLayout>

